<Window x:Class="AuthDef.MainWindow" Closed="Window_Closed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthDef"
        mc:Ignorable="d"
        
        xmlns:mDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        Title="Авторизация" Height="450" Width="700">
    <Grid Background="#00ffe5">
        <Border MinWidth="400" Margin="15" Background="WhiteSmoke" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="35" ShadowDepth="5" Color="Black"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Привет Вам!" FontSize="30" FontWeight="Bold" Margin="0 0 0 15"/>

                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="Регистрация"/>
                    <Button HorizontalAlignment="Right" Content="Авторизация" Click="btnWinAuthClick" Style="{StaticResource MaterialDesignFlatButton}"/>
                </Grid>

                <TextBox x:Name="loginTextBox" mDesign:HintAssist.Hint="Введите логин" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <PasswordBox x:Name="passwordPasBox" mDesign:HintAssist.Hint="Введите пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
                <PasswordBox x:Name="password2PasBox" mDesign:HintAssist.Hint="Повторите пароль" Style="{StaticResource MaterialDesignPasswordBox}"/>
                <TextBox x:Name="emailTextBox" mDesign:HintAssist.Hint="Введите Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                <Button Content="Зарегистрироваться" Margin="0 20" Click="btnRegClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
