<Window x:Class="AuthDef.UsersProfile" Closed="Window_Closed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthDef"
        mc:Ignorable="d"
        xmlns:mDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        Title="Авторизация" Height="450" Width="700">
    <Grid Background="#00ffe5">
        <Border MinWidth="400" Margin="15" Background="WhiteSmoke" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="35" ShadowDepth="5" Color="Black"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Кабинет пользователя" FontSize="30" FontWeight="Bold" Margin="0 0 0 15"/>

                <TextBlock x:Name="lgnTextBlock" Text="Ваш логин: " Margin="0 0 0 5" FontSize="15"/>
                <TextBlock x:Name="emailTextBlock" Text="Ваш Email: " Margin="0 0 0 5" FontSize="15"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
